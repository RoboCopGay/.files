#!/bin/python

from sys import argv as a
import urllib

LINK_TEMPLT = "https://api.whatsapp.com/send?phone=55{}&text=Oi{}%2C%20%F0%9F%98%83%20Eu%20sou%20*Yaks%20Souza*%2C%20Sou%20Desenvolvedor%20de%20software%20e%20*Ilustrador*%2C%20Vi%20seu%20anuncio%20no%20*GetNinjas*%20e%20fiquei%20interessado%2C%20Antes%20que%20me%20pergunte%2C%20a%20seguir%20deixei%20alguns%20links%20para%20voc%C3%AA%20me%20conhecer%20melhor%3A%0A%0A-%20Github%3A%20http%3A%2F%2Fgithub.com%2Fplankiton%0A-%20Behance%3A%20http%3A%2F%2Fwww.behance.net%2Fplankiton%0A-%20Linkedin%3A%20http%3A%2F%2Flinkedin.com%2Fin%2Fplankiton%0A-%20Instagram%3A%20http%3A%2F%2Finstagram.com%2Fplank1ton%0A-%20Blog%3A%20http%3A%2F%2Fpl4nk1ton.medium.com"

people_name = ""
if '-m' in a:
    msg = a.index('-m')+1
    LINK_TEMPLT += '%0A%0A'+a[msg]
    a.pop(msg-1)
    a.pop(msg-1)

if '-n' in a:
    name = a.index('-n')+1

    people_name = ' '+ a[name]
    a.pop(name-1)
    a.pop(name-1)

print(LINK_TEMPLT.format(''.join(a[1:]), people_name))
